@model IEnumerable<AgriEnergyConnect.Models.Product>

@{
    ViewData["Title"] = "Farmer Dashboard";
}

<div class="container py-4">
    <div class="text-center mb-4">
        <h2 class="display-5 text-success">🌾 Farmer Dashboard</h2>
    </div>

    <!-- Success message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Add Product Button -->
    <div class="mb-3 text-end">
        <a href="@Url.Action("Create", "Product")" class="btn btn-outline-success">
            <i class="bi bi-plus-circle"></i> Add New Product
        </a>
    </div>

    <hr />

    <!-- Product List -->
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Your Products</h4>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <table class="table table-hover table-bordered m-0">
                    <thead class="table-success">
                        <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Production Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@product.Category</td>
                                <td>@product.ProductionDate.ToString("yyyy-MM-dd")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="p-3 text-center text-muted">No products found.</div>
            }
        </div>
    </div>
</div>
