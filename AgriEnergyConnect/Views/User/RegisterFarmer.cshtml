@model AgriEnergyConnect.Models.User

@{
    ViewData["Title"] = "Register Farmer";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm border-success">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">🌾 Register a New Farmer</h4>
                </div>
                <div class="card-body">
                    <form method="post" class="row g-4">
                        <div class="col-md-6">
                            <label for="FirstName" class="form-label">First Name</label>
                            <input type="text" name="FirstName" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label for="LastName" class="form-label">Last Name</label>
                            <input type="text" name="LastName" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label for="Email" class="form-label">Email</label>
                            <input type="email" name="Email" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label for="Password" class="form-label">Password</label>
                            <input type="password" name="Password" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <input type="password" name="ConfirmPassword" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label for="Role" class="form-label">Role</label>
                            <input type="text" name="Role" value="Farmer" class="form-control bg-light" readonly />
                        </div>
                        <div class="col-md-12 d-flex justify-content-end gap-2 mt-3">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-person-plus"></i> Register
                            </button>
                            <a href="@Url.Action("EmployeeDashboard", "User")" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
