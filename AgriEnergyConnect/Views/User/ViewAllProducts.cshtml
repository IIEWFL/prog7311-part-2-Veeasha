@model AgriEnergyConnect.Models.ProductFilterViewModel


@{
    ViewData["Title"] = "Employee Dashboard";
}

<h2>Employee Dashboard</h2>
<h2>Employee Dashboard</h2>

<form method="get" class="row g-3 mb-4">
    <div class="col-md-3">
        <input type="text" name="FarmerName" value="@Model.FarmerName" class="form-control" placeholder="Farmer Name" />
    </div>
    <div class="col-md-2">
        <input type="text" name="Category" value="@Model.Category" class="form-control" placeholder="Category" />
    </div>
    <div class="col-md-2">
        <input type="date" name="StartDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")" class="form-control" />
    </div>
    <div class="col-md-2">
        <input type="date" name="EndDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")" class="form-control" />
    </div>
    <div class="col-md-3">
        <button type="submit" class="btn btn-primary">Filter</button>
        <a href="@Url.Action("EmployeeDashboard", "User")" class="btn btn-secondary">Reset</a>
    </div>
</form>

@if (Model.Products != null && Model.Products.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Farmer Name</th>
                <th>Product Name</th>
                <th>Category</th>
                <th>Production Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@(product.User?.FirstName + " " + product.User?.LastName)</td>
                    <td>@product.Name</td>
                    <td>@product.Category</td>
                    <td>@product.ProductionDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products found matching the filter.</p>
}

